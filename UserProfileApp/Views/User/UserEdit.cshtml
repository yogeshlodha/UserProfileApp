@using UserProfileApp.Models.DB;
@model UserProfile

<h1>
    Hi, @Html.DisplayFor(m => m.UserName)
</h1>
@using (Html.BeginForm("UserEdit", "User", FormMethod.Post))
{
<input type="hidden" name="UserId" id="UserId" value="@Model.Id" />
<table>
    <tr>
        <td>Name  </td>
        <td>&nbsp;&nbsp;  @Html.TextBoxFor(m => m.UserName) </td>
    </tr>

    <tr>
        <td> Email </td>
        <td> &nbsp;&nbsp; @Html.TextBoxFor(m => m.EmailId, new { type = "email" }) </td>
    </tr>
    <tr>
        <td>City  </td>
        <td> &nbsp;&nbsp; @Html.TextBoxFor(m => m.City) </td>
    </tr>
    <tr>
        <td>Date Of Birth </td>
        <td>&nbsp;&nbsp; 
            <input type="date" name="name" value="@Model.DOB.Value.ToString("mm/dd/yyyy")" /> </td>
    </tr>
    <tr>
        <td>
            <input type="submit" name="btnSave" id="btnSave" value="Save" />
        </td>
    </tr>
</table>

}